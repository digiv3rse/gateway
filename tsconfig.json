{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noUnusedLocals": true,
    "outDir": "build",
    "strict": true,
    "target": "ES2022",
    "types": ["@emotion/react", "jest", "@testing-library/jest-dom"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "lib": ["ES2022", "DOM"]
  },
  "include": ["src"],
}
