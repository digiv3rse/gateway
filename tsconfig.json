{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noUnusedLocals": true,
    "outDir": "build",
    "strict": true,
    "target": "ES2019",
    "resolveJsonModule": true,
    "types": [
      "@emotion/core",
      "jest"
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "lib": ["ES2019", "DOM"],
  },
  "include": [
    "src"
  ]
}
